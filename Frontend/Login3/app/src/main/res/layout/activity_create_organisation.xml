<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/black"
            android:padding="16dp">

        <!-- Welcome Text -->
        <TextView
                android:id="@+id/welcome_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WELCOME CYCLONES"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/dark_red"
                android:paddingBottom="16dp"
                android:layout_marginTop="20dp" />

        <!-- EditText for Organization Name -->
        <EditText
                android:id="@+id/etOrgName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Organization Name"
                android:textColor="@color/black"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="16dp"
                android:padding="8dp" />

        <!-- EditText for Email -->
        <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColor="@color/black"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="8dp"
                android:padding="8dp" />

        <!-- EditText for Organization ID -->
        <EditText
                android:id="@+id/etOrgId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Organization ID"
                android:textColor="@color/black"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="8dp"
                android:padding="8dp" />

        <!-- EditText for Director -->
<!--        <EditText-->
<!--                android:id="@+id/etDirector"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint="Director"-->
<!--                android:textColor="@color/black"-->
<!--                android:background="@android:drawable/edit_text"-->
<!--                android:layout_marginTop="8dp"-->
<!--                android:padding="8dp" />-->

<!--        &lt;!&ndash; EditText for Advisor &ndash;&gt;-->
<!--        <EditText-->
<!--                android:id="@+id/etAdvisor"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint="Advisor"-->
<!--                android:textColor="@color/black"-->
<!--                android:background="@android:drawable/edit_text"-->
<!--                android:layout_marginTop="8dp"-->
<!--                android:padding="8dp" />-->

        <!-- Button to Create Organization -->
        <Button
                android:id="@+id/CO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Organisation"
                android:textSize="18sp"
                android:background="#B3FFFFFF"
                android:textColor="@color/black"
                android:padding="16dp"
                android:layout_marginTop="8dp" />

        <!-- Button to Edit Organization -->

        <Button
                android:id="@+id/EO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Organization"
                android:textSize="18sp"
                android:background="#B3FFFFFF"
                android:textColor="@color/black"
                android:padding="16dp"
                android:layout_marginTop="8dp" />

        <EditText
                android:id="@+id/etOrgIdE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Organization ID"
                android:textColor="@color/black"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="8dp"
                android:padding="8dp" />

        <!-- Button to submit OrgID and show name/email fields -->
        <Button
                android:id="@+id/btnSubmitOrgId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit Organization ID"
                android:layout_marginTop="12dp" />

        <!-- Name EditText (hidden initially) -->
        <EditText
                android:id="@+id/etOrgNameE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter New Organization Name"
                android:textColor="@color/black"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="12dp"
                android:padding="8dp"
                android:visibility="gone" />

        <!-- Email EditText (hidden initially) -->
        <EditText
                android:id="@+id/etOrgEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter New Organization Email"
                android:textColor="@color/black"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:visibility="gone" />


        <!-- Button to Get Organization -->
        <Button
                android:id="@+id/GO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Organization"
                android:textSize="18sp"
                android:background="#B3FFFFFF"
                android:textColor="@color/black"
                android:padding="16dp"
                android:layout_marginTop="8dp" />

        <!-- TextView for Organization List -->
        <TextView
                android:id="@+id/orgListTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Organizations will be listed here"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/white" />


        <EditText
                android:id="@+id/etOrgIdD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Organization ID to be deleted"
                android:textColor="@color/black"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="16dp"
                android:padding="8dp" />

        <!-- Button to Delete Organization -->
        <Button
                android:id="@+id/DO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Organization"
                android:textSize="18sp"
                android:background="#B3FFFFFF"
                android:textColor="@color/black"
                android:padding="16dp"
                android:layout_marginTop="8dp" />

        <!-- Button to Logout -->
        <Button
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textColor="@color/white"
                android:background="@null"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
