<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"> <!-- Ensures the ScrollView fills the entire screen -->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- TextView for Welcome Message -->
        <TextView
                android:id="@+id/welcome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to the Organization App"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

        <!-- EditText for Organization Name -->
        <EditText
                android:id="@+id/etOrgName"
                android:layout_width="match_parent"
                android:textSize="35sp"
                android:layout_height="wrap_content"
                android:hint="Enter Organization Name"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

        <!-- EditText for Email -->
        <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:hint="Enter Email"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

        <!-- EditText for Director -->
        <EditText
                android:id="@+id/etDirector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Director Name"
                android:textColor="@android:color/black"
                android:textSize="35sp"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

        <!-- EditText for Advisor -->
        <EditText
                android:id="@+id/etAdvisor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Advisor Name"
                android:textSize="35sp"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

        <!-- Button to Create Organization -->
        <Button
                android:id="@+id/CO1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Organization"
                android:textSize="18sp"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

        <Button
                android:id="@+id/CO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Organization"
                android:textSize="18sp"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

        <Button
                android:id="@+id/COq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Organization"
                android:textSize="18sp"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

        <Button
                android:id="@+id/COw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Organization"
                android:textSize="18sp"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

        <Button
                android:id="@+id/CeO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Organization"
                android:textSize="18sp"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

        <Button
                android:id="@+id/COe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Organization"
                android:textSize="18sp"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

        <!-- Button to Get Organizations -->
        <Button
                android:id="@+id/GO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Organizations"
                android:textSize="18sp"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

        <!-- TextView to Display Organization List (Initially Hidden) -->
        <TextView
                android:id="@+id/orgListTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organizations will be listed here"
                android:textSize="16sp"
                android:visibility="gone"
        android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
