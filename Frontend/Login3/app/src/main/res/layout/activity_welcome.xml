<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/isu"
        android:padding="16dp">

    <!-- Welcome Text -->

    <TextView
            android:id="@+id/welcome_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="WELCOME CYCLONES"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/dark_red"
            android:paddingBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@+id/org_button" />

    <Button
            android:id="@+id/ent_button"
            android:layout_width="406dp"
            android:layout_height="65dp"
            android:text="Events"
            tools:ignore="MissingConstraints"
            android:textSize="18sp"
            android:background="#B3FFFFFF"
            android:textColor="@color/black"
            android:padding="16dp"
            android:textColorLink="#3F51B5"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/org_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.606" />


    <Button
            android:id="@+id/org_button"
            android:layout_width="405dp"
            android:layout_height="69dp"
            android:text="Organization"
            tools:ignore="MissingConstraints"
            android:textSize="18sp"
            android:background="#B3FFFFFF"
            android:textColor="@color/black"
            android:padding="16dp"
            android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/welcome_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.606" />

    <Button
        android:id="@+id/club_button"
        android:layout_width="405dp"
        android:layout_height="69dp"
        android:text="Clubs"
        tools:ignore="MissingConstraints"
        android:textSize="18sp"
        android:background="#B3FFFFFF"
        android:textColor="@color/black"
        android:padding="16dp"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toBottomOf="@+id/ent_button"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.606" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="215dp"
        android:layout_height="53dp"
        android:background="@null"
        android:text="LOG OUT"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/user_button"
        android:layout_width="59dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/usericon2" />


</androidx.constraintlayout.widget.ConstraintLayout>
