<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <!-- Top Horizontal Bar -->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="403dp"
        android:layout_height="424dp"
        android:layout_below="@+id/upcomingEventsLabel"
        android:layout_marginTop="8dp"
        android:fillViewport="true">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e3e9f5"
            android:padding="16dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/upcomingEventsRecyclerView"
                android:layout_width="371dp"
                android:layout_height="408dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:clipToPadding="false"
                tools:listitem="@layout/item_eventedit" />

        </RelativeLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/welcomeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:textAlignment="center"
            android:textColor="@color/dark_red"
            android:textSize="24sp" />

    </LinearLayout>


        <ScrollView
            android:id="@+id/scrollView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ent_button"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/ent_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/joining_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:hint="Join notifications will appear here: "
                android:textSize="20dp" />
        </ScrollView>




    <Button
        android:id="@+id/ent_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topBar"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="@color/green"
        android:padding="12dp"
        android:text="Create Event"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />




    <TextView
        android:id="@+id/upcomingEventsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollView5"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="sans-serif-medium"
        android:text="Upcoming Events"
        android:textColor="@android:color/black"
        android:textSize="20sp" />


    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0dp"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="0dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="0dp">

        <Button
            android:id="@+id/chatButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/chat"
            android:contentDescription="Go to Chat" />

        <Button
            android:id="@+id/edit_club_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="65dp"
            android:background="@drawable/account" />

        <Button
            android:id="@+id/logout_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/settings" />
    </LinearLayout>

</RelativeLayout>


